
<main class="container mx-auto">
  <div class="header flex items-center justify-between py-8">
    <h1 class="text-3xl font-bold">ToDo App</h1>
    <%= link_to "New task",
                new_task_path,
                class: "btn btn--primary py-2 px-4 rounded bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:bg-blue-600",
                # empty turbo frame same id from new.html.erb
                data: { turbo_frame: dom_id(Task.new) } %> 
  </div>

  <%= turbo_frame_tag Task.new, class: "mt-4" %>

  <%= turbo_frame_tag "tasks", class: "mt-4" do %>
    <%= render @tasks %>
  <% end %>
</main>



<%= turbo_frame_tag task do %>
  <div class="task border rounded-md p-4 mb-4 flex justify-between items-center">
    <p class="text-lg"><%= task.task %></p>
    <div class="task__actions flex items-center">
      <%= link_to "Edit",
                  edit_task_path(task),
                  class: "btn btn--light btn--blue mr-2 hover:bg-blue-600 hover:text-white transition-colors duration-200 ease-in-out" %>
      <%= button_to "Delete",
                    task_path(task),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: "btn btn--light btn--red hover:bg-red-600 hover:text-white transition-colors duration-200 ease-in-out" %>
    </div>
  </div>
<% end %>
